---
import { SITE } from "@config";
import Shorts from "@layouts/Shorts.astro";
import getSortedShorts from "@utils/getSortedShorts";
import getPageNumbers from "@utils/getPageNumbers";

import { getCollection } from "astro:content";

const shorts = await getCollection("short");

const sortedPosts = getSortedShorts(shorts);

const totalPages = getPageNumbers(sortedPosts.length);

const paginatedPosts = sortedPosts.slice(0, SITE.postPerPage);
---

<Shorts shorts={paginatedPosts} pageNum={1} totalPages={totalPages.length} />
