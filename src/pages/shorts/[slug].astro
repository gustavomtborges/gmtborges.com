---
import { type CollectionEntry, getCollection } from "astro:content";
import Shorts from "@layouts/Shorts.astro";
import ShortDetails from "@layouts/ShortDetails.astro";
import getSortedShorts from "@utils/getSortedShorts";
import getPageNumbers from "@utils/getPageNumbers";
import { SITE } from "@config";
import slugify from "@utils/slugify";

export interface Props {
  post: CollectionEntry<"short">;
}

export async function getStaticPaths() {
  const posts = await getCollection("short", ({ data }) => !data.draft);

  const postResult = posts.map(post => ({
    params: { slug: slugify(post.data) },
    props: { post },
  }));

  const pagePaths = getPageNumbers(posts.length).map(pageNum => ({
    params: { slug: String(pageNum) },
  }));

  return [...postResult, ...pagePaths];
}

const { slug } = Astro.params;
const { post } = Astro.props;

const posts = await getCollection("short");

const sortedPosts = getSortedShorts(posts);

const totalPages = getPageNumbers(sortedPosts.length);

const currentPage =
  slug && !isNaN(Number(slug)) && totalPages.includes(Number(slug))
    ? Number(slug)
    : 0;
const lastPost = currentPage * SITE.postPerPage;
const startPost = lastPost - SITE.postPerPage;

const paginatedPosts = sortedPosts.slice(startPost, lastPost);
---

{
  post ? (
    <ShortDetails post={post} />
  ) : (
    <Shorts
      shorts={paginatedPosts}
      pageNum={currentPage}
      totalPages={totalPages.length}
    />
  )
}
